<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	<modelVersion>4.0.0</modelVersion>
	<packaging>pom</packaging>
	<groupId>orwell</groupId>
	<artifactId>robots</artifactId>
	<version>0.1.0</version>
	<name>NXT Robots</name>
	<url>https://github.com/orwell-int/robots</url>
    <description>What is actually running on the NXT robots</description>
	<organization>
		<name>ORWELL</name>
		<url>https://github.com/orwell-int</url>
	</organization>
	<scm>
		<url>https://github.com/orwell-int/robots</url>
		<connection>scm:git:git://github.com:orwell-int/robots.git</connection>
		<developerConnection>scm:git:git://github.com:orwell-int/robots.git</developerConnection>
	</scm>
	<ciManagement>
		<system>travis-ci</system>
		<url>https://travis-ci.org/orwell-int/robots</url>
	</ciManagement>
	<modules>
		<module>lejos-mf-nxt</module>
		<module>robots-module</module>
	</modules>
	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<version>3.2</version>
					<configuration>
						<source>1.5</source>
						<target>1.5</target>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-install-plugin</artifactId>
					<version>2.5.2</version>

				</plugin>
				<plugin>
					<groupId>org.eluder.coveralls</groupId>
					<artifactId>coveralls-maven-plugin</artifactId>
					<version>3.0.1</version>
					<configuration>
						<repoToken>${COVERALLS_REPO_TOKEN}</repoToken>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>cobertura-maven-plugin</artifactId>
					<version>2.6</version>
					<configuration>
						<format>xml</format>
						<maxmem>256m</maxmem>
						<!-- aggregated reports for multi-module projects -->
						<aggregate>true</aggregate>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-jar-plugin</artifactId>
					<version>2.5</version>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>
